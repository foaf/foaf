<h2>FOAF-a-Matic</h2>




<fmt:languages/>
<p>
<fmt:author/> <fmt:translator/>
</p>

<fmt:introduction/>

<form name="details" onSubmit="return false;">

<fmt:forms/>

<fmt:personal/>

<table>
<tr>
<td><fmt:field id="title"/></td><td><input type="text" name="title"/></td>
</tr>
<tr>
<td><fmt:field id="firstName"/></td><td><input type="text" name="firstName"/></td>
</tr>
<tr>
<td><fmt:field id="surname"/></td><td><input type="text" name="surname"/></td>
</tr>
<tr>
<td><fmt:field id="nick"/></td><td><input type="text" name="nick"/></td>
</tr>
<tr>
<td><fmt:field id="email"/></td><td><input type="text" name="email"/></td>
</tr>
<tr>
<td><fmt:field id="homepage"/></td><td><input type="text" name="homepage"/></td>
</tr>
<tr>
<td><fmt:field id="depiction"/></td><td><input type="text" name="depiction"/></td>
</tr>
<tr>
<td><fmt:field id="phone"/></td><td><input type="text" name="phone"/></td>
</tr>
</table>

<fmt:work/>

<table>
<tr>
<td><fmt:field id="workplaceHomepage"/></td><td><input type="text" name="workplaceHomepage"/></td>
</tr>
<tr>
<td><fmt:field id="workInfoHomepage"/></td><td><input type="text" name="workInfoHomepage"/></td>
</tr>
</table>

<fmt:school/>

<table>
<tr>
<td><fmt:field id="schoolHomepage"/></td><td><input type="text" name="schoolHomepage"/></td>
</tr>
</table>

</form>

<fmt:friends/>

<form name="friends" onSubmit="return false;">
<table>
<tbody id="friendtable">
<script language="javascript">
//see foaf-a-matic.js
createFriendFields();
</script>
</tbody>
</table>

<input id="addFriend" type="button" value="Add Friend" onClick="addFriendFields()"/>
</form>

<fmt:results/>

<form name="results" onSubmit="return false;">
<p>
   <input type="checkbox" id="spamProtect" name="spamProtect" checked="checked" /> <fmt:field id="spamProtect"/> 
</p>
<p>
   <input type="submit" id="generate" value="FOAF me!" onClick="generate()"/>
</p>
<textarea name="rdf" cols="80" rows="20">

<!-- see http://www.foaf-project.org/ for more on FOAF -->

</textarea>

<p align="left">
   <input id="reset" type="reset"/>
</p>

</form>

